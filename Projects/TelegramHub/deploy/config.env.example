# TelegramHub Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Telegram API (get from https://my.telegram.org/apps)
# =============================================================================
TELEGRAM_API_ID=2040
TELEGRAM_API_HASH=b18441a1ff607e10a989891a5462e627

# =============================================================================
# Server Configuration
# =============================================================================
HOST=127.0.0.1
PORT=8765

# =============================================================================
# AI Configuration (Optional)
# =============================================================================
# Supported providers: openai, anthropic
AI_PROVIDER=openai

# Your API key
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
AI_API_KEY=

# Model to use
# OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-3-5-sonnet-20241022, claude-3-haiku-20240307
AI_MODEL=gpt-4o-mini

# =============================================================================
# Review Mode Settings
# =============================================================================
# Minimum unread messages to include in review queue
REVIEW_MIN_UNREAD=1

# Maximum chats to process in one review session
REVIEW_MAX_CHATS=50

# Skip groups/channels in review (true/false)
REVIEW_SKIP_GROUPS=true
